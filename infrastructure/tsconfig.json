{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts",
    "lambdas/**/*.ts"   
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
